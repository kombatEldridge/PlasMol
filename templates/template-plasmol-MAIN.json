{
  "settings": {
    "dt": 0.1, // Time step in atomic units
    "t_end": 40 // End time in atomic units
  },
  "plasmon": {
    "simulation": {
      "tolerance_efield": 1e-12, // Has default value
      "cell_length": 0.1, // In units of microns
      "pml_thickness": 0.01, // In units of microns
      "symmetries": ["Y", 1, "Z", -1], // Options are "X", "Y", "Z" each followed by 1 or -1
      "surrounding_material_index": 1.33 // has default value
    },
    "source": {
      "source_type": "continuous",
      "source_center": [-0.04, 0, 0], // In units of microns, necessary for all source types
      "source_size": [0, 0.1, 0.1], // In units of microns, necessary for all source types
      "component": "z", // Options are "x", "y", "z", necessary for all source types
      "amplitude": 1, // applicable for all source types
      "additional_parameters": {
        "frequency": 5, // applicable for 'continuous' and 'gaussian' source types, in units of 1/microns
        "wavelength": null, // applicable for 'continuous' and 'gaussian' source types, in units of microns
        "is_integrated": true, // applicable for 'continuous' and 'gaussian' source types, in units of 1/microns
        // "start_time": 0, // applicable for all source types, in units of time
        // "end_time": 1e+20, // applicable for all source types, in units of time
        // "width": 0, // applicable for all source types, the temporal width of the smoothing (technically, the inverse of the exponential rate at which the current turns off and on)
        // "fwidth": null, // applicable for all source types, synonym for 1/width, in units of inverse time
        // "slowness": 3.0, // applicable for 'continuous' source type
        // "cutoff": 5.0, // applicable for 'gaussian' source type, number of widths before cutoff
        // "src_func": null, // applicable for 'custom' source type, needs to be specified in source code
      },
    },
    "nanoparticle": { // TODO: revamp to allow for non-spherical particles
      "material": "Au",
      "radius": 0.03,
      "center": [0, 0, 0]
    },
    "images": {
      "timesteps_between": 1,
      "intensity_min": 3,
      "intensity_max": 10,
      "image_dir_name": "hello"
    },
    "molecule_position": [0, 0, 0]
  },
  "molecule": {
    "geometry": [
      {"atom": "O", "coord": [0.0000000000, 0.0000000000, -0.1302052882]},
      {"atom": "H", "coord": [1.4891244004, 0.0000000000, 1.0332262019]},
      {"atom": "H", "coord": [-1.4891244004, 0.0000000000, 1.0332262019]}
    ],
    "geometry_units": "bohr",
    "charge": 0,
    "spin": 0,
    "basis": "6-31g",
    "xc": "pbe0",
    // "lrc_parameter": 0.0, // aka mu or omega
    // "custom_xc": "", // to be determined how to parse this
    "propagator": { 
      "type": "magnus2",
      "pc_convergence": 1e-12, // only for Magnus2, has default value
      "max_iterations": 200 // only for Magnus2, has default value
    },
    "hermiticity_tolerance": 1e-12, // has default value
    "modifiers":{
      // "fourier": { // if not present, defaults to false
      //   "gamma": 1, // Broadening factor for Fourier transformed spectrum
      //   "filepath_pfield_fourier": "pField-transformed.csv", // File path of P field at the molecule's position after a Fourier transformation to eV vs absorption
      //   "filepath_spectrum_fourier": "spectrum.png"
      // },
      "broadening": { // if not present, defaults to false
        "type": "static",
        "gam0": 1,
        "xi": 0.5,
        "eps0": 0.0477,
        "clamp": 100
      },
      // "dampening": { // if not present, defaults to false
      //   "gamma": 1, // This is an artificial dampening added to P field after its over to compare work to Lopata Broadening
      // },
      // "comparison": {
      //     "bases": ["631g*", "augccpvtz", "def2tzvppd"],
      //     "xcs": ["pbe0", "b3lyp", "camb3lyp", "lcpbe"],
      //     "num_virtual": 3, // has default value
      //     "num_occupied": 3, // has default value
      //     "y_min": -1, // has default value
      //     "y_max": 1 // has default value
      // },
    },
    "source": {
      "type": "pulse", // Options are 'pulse' or 'kick'
      "intensity_au": 0.001, // Electric field intensity in atomic units
      "peak_time_au": 10, // Time at which the pulse peaks in atomic units
      "width_steps": 50, // Width of the pulse in time steps
      "width_au": null, // Optional: Width of the pulse in atomic units, calculated if not provided
      "wavelength_nm": 800, // Required if shape is 'pulse', wavelength in nanometers
      "wavelength_au": null, // Optional if shape is 'pulse', wavelength in atomic units, calculated if not provided
      "dir": "z" // Direction of the electric field
    },
    },
    "files": {
      "checkpoint": {
        "snapshot_frequency": 100,
        "filepath_checkpoint": "checkpoint.npz"
      },
      "filepath_efield": "eField.csv", // File path of E field at the molecule's position
      "filepath_pfield": "pField.csv", // File path of P field at the molecule's position
      // "filepath_spectrum_e_vs_p": "output.png",
    }
  }
}