start source
    sourceType chirped
    sourceCenter -0.04
    sourceSize 0 0.1 0.1
    frequency 5
    width 0.1
    peakTime 5
    chirpRate -0.5
    isIntegrated True
end source

start simulation
    resolution 2000
    responseCutOff 1e-12
    cellLength 0.1
    pmlThickness 0.01
    totalTime 40 fs
    symmetries Y 1 Z -1
    surroundingMaterialIndex 1.33
    directionCalculation z
end simulation

start matplotlib
    output chirped10fslowres
    CSVlocation csv/
    IMGlocation img/
end matplotlib

start molecule
    moleculeCenter 0 0 0
    directionCalculation z
    quantumInputFile h2o.in
end molecule

start rttddft
    start geometry
        O      0.0000000000       0.0000000000       -0.1302052882
        H      1.4891244004       0.0000000000        1.0332262019
        H     -1.4891244004       0.0000000000        1.0332262019
    end geometry
    units bohr
    pc_convergence 1e-12
    check_tolerance 1e-12
    maxiter 200
    charge 0
    spin 0
    basis 6-31g 
    xc pbe0
    resplimit 1e-20
    propagator magnus2
end rttddft

start settings
    log plasmol.log
    timestep 0.01 -- fix at some point
    restart True
    start chkfile
        frequency 100
        path chkfile.npz
    end chkfile
    eField_path eField.csv
    pField_path pField.csv
    pField_Transform_path output.png
    eField_vs_pField_path spectrum.png
end settings
